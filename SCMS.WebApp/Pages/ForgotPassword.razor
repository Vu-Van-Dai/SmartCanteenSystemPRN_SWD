@page "/forgot-password"
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Quên Mật khẩu</PageTitle>

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Tìm lại mật khẩu</h3>

            @if (showSuccessMessage)
            {
                <div class="alert alert-success">
                    Yêu cầu đã được gửi. Nếu email của bạn tồn tại trong hệ thống, bạn sẽ nhận được một liên kết để khôi phục mật khẩu.
                </div>
            }
            else
            {
                <p class="text-muted text-center">Nhập địa chỉ email của bạn và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu.</p>
                <EditForm Model="forgotPasswordDto" OnValidSubmit="HandleForgotPassword">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <InputText @bind-Value="forgotPasswordDto.Email" class="form-control" placeholder="Email của bạn" />
                        <ValidationMessage For="@(() => forgotPasswordDto.Email)" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        Gửi yêu cầu
                    </button>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private ForgotPasswordDto forgotPasswordDto = new();
    private bool isSubmitting = false;
    private bool showSuccessMessage = false;

    private async Task HandleForgotPassword()
    {
        isSubmitting = true;
        var response = await AuthService.ForgotPasswordAsync(forgotPasswordDto);
        isSubmitting = false;
        showSuccessMessage = true; // Always show success to prevent email enumeration
    }
}