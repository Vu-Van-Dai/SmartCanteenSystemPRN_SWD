@page "/menu"
@attribute [AllowAnonymous]

@using SCMS.WebApp.Services

@inject SCMS.WebApp.Services.MenuService WebAppMenuService
@inject SCMS.WebApp.Services.CartService WebAppCartService
@inject SCMS.WebApp.Services.ToastService WebAppToastService
@inject AuthenticationStateProvider AuthenticationStateProvider

<h3 class="mb-4">Thực đơn Canteen</h3>

<div class="row g-3 align-items-end bg-light p-3 rounded mb-4 shadow-sm">
    <div class="col-md-6">
        <label class="form-label">Tìm kiếm theo tên món ăn</label>
        <InputText class="form-control" @bind-Value="searchTerm" placeholder="Ví dụ: Cơm sườn..." />
    </div>
    <div class="col-md-4">
        <label class="form-label">Lọc theo danh mục</label>
        <InputSelect class="form-select" @bind-Value="selectedCategoryId">
            <option value="0">-- Tất cả danh mục --</option>
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </InputSelect>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100" @onclick="ApplyFilter">
            <span class="oi oi-magnifying-glass"></span> Lọc
        </button>
    </div>
</div>

@if (menuItems == null)
{
    <p><em>Đang tải thực đơn...</em></p>
}
else if (!menuItems.Any())
{
    <div class="alert alert-info">Không tìm thấy món ăn nào phù hợp.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in menuItems)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/150" : item.ImageUrl)" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="card-text"><strong>Tồn kho:</strong> @item.InventoryQuantity</p>
                        <div class="mt-auto">
                            <p class="h5 text-danger">@item.Price.ToString("N0") VNĐ</p>

                            <button class="btn btn-success w-100" @onclick="async () => await AddToCart(item)" disabled="@(item.InventoryQuantity <= 0)">
                                @(item.InventoryQuantity > 0 ? "Thêm vào giỏ hàng" : "Hết hàng")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<MenuItem>? menuItems;
    private List<Category>? categories;
    private string? searchTerm;
    private int selectedCategoryId;

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        categories = await WebAppMenuService.GetCategoriesAsync();
        await ApplyFilter();
    }

    private async Task ApplyFilter()
    {
        menuItems = await WebAppMenuService.GetMenuItemsAsync(searchTerm, selectedCategoryId);
    }

    private async Task AddToCart(MenuItem item)
    {
        if (AuthenticationStateTask is null)
        {
            WebAppToastService.ShowToast("Lỗi xác thực người dùng!", ToastLevel.Danger); // SỬA LỖI: Error -> Danger
            return;
        }

        var authState = await AuthenticationStateTask;
        var user = authState.User;

        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            if (user.IsInRole("Student") || user.IsInRole("SystemAdmin"))
            {
                WebAppCartService.AddItem(item);
                WebAppToastService.ShowToast($"Đã thêm '{item.Name}' vào giỏ hàng", ToastLevel.Success);
            }
            else
            {
                WebAppToastService.ShowToast("Bạn không có quyền truy cập!", ToastLevel.Danger); // Giữ lại Warning, đây là tên chuẩn
            }
        }
        else
        {
            WebAppToastService.ShowToast("Vui lòng đăng nhập để đặt món!", ToastLevel.Danger); // Giữ lại Info, đây là tên chuẩn
        }
    }
}