@page "/my-orders"
@attribute [Authorize(Roles = "Student")]

@inject OrderService OrderService
@inject ToastService ToastService
@inject CartService CartService
@inject NavigationManager NavigationManager
@inject ConfirmDialogService DialogService

@if (selectedOrder != null)
{
    <div class="modal fade show" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chi tiết Đơn hàng #@selectedOrder.OrderId</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Ngày đặt:</strong> @selectedOrder.OrderDate.ToLocalTime().ToString("HH:mm dd/MM/yyyy")</p>
                    <h6>Các món đã đặt:</h6>
                    <ul>
                        @foreach (var item in selectedOrder.OrderItems)
                        {
                            <li>@item.MenuItem.Name (Số lượng: @item.Quantity)</li>
                        }
                    </ul>
                    <hr />
                    <p class="h5 text-end"><strong>Tổng tiền: @selectedOrder.TotalPrice.ToString("N0") VNĐ</strong></p>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<h3>Lịch sử Đặt hàng</h3>
<div class="mb-3">
    <a href="/spending-report" class="btn btn-info">
        <span class="oi oi-bar-chart" aria-hidden="true"></span> Xem Báo cáo Chi tiêu Tổng hợp
    </a>
</div>

@if (orders == null)
{
    <p><em>Đang tải lịch sử...</em></p>
}
else if (!orders.Any())
{
    <p>Bạn chưa đặt đơn hàng nào.</p>
}
else
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Mã Đơn</th>
                <th>Ngày Đặt</th>
                <th>Tổng Tiền</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orders)
            {
                <tr>
                    <td>#@order.OrderId</td>
                    <td>
                        @order.OrderDate.ToLocalTime().ToString("HH:mm dd/MM/yyyy")
                        @if (order.PickupTime.HasValue)
                        {
                            <br />

                            <small class="text-primary">Nhận lúc: @order.PickupTime.Value.ToLocalTime().ToString("HH:mm dd/MM/yyyy")</small>
                        }
                    </td>
                    <td>@order.TotalPrice.ToString("N0") VNĐ</td>
                    <td><span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span></td>
                    <td>
                        <button class="btn btn-info btn-sm" @onclick="() => ShowDetailModal(order)">Xem chi tiết</button>

                        @if (order.Status == "Pending Payment")
                        {
                            <button class="btn btn-success btn-sm mx-1" @onclick="() => HandleConfirmPayment(order)">Thanh toán</button>
                            <button class="btn btn-warning btn-sm mx-1" @onclick="() => EditOrder(order)">Chỉnh sửa</button>
                        }

                        @if (order.Status == "Paid")
                        {
                            <button class="btn btn-danger btn-sm" @onclick="() => HandleCancelOrder(order)">Hủy đơn</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Order>? orders;
    private Order? selectedOrder; 

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        orders = await OrderService.GetMyOrdersAsync();
    }

    private void ShowDetailModal(Order order)
    {
        selectedOrder = order;
    }

    private void CloseDetailModal()
    {
        selectedOrder = null;
    }

    private async Task HandleConfirmPayment(Order order)
    {
        if (await DialogService.Show("Xác nhận Thanh toán", $"Bạn có chắc chắn muốn thanh toán cho đơn hàng #{order.OrderId}?"))
        {
            var result = await OrderService.ConfirmOrderPaymentAsync(order.OrderId);
            if (result.Success)
            {
                ToastService.ShowToast(result.Message, ToastLevel.Success);
                await LoadOrders();
            }
            else
            {
                ToastService.ShowToast(result.Message, ToastLevel.Danger);
            }
        }
    }

    private async Task HandleCancelOrder(Order order)
    {
        string message = $"Bạn có chắc chắn muốn hủy đơn hàng #{order.OrderId} không?";
        if (order.PickupTime.HasValue && order.PickupTime.Value.ToLocalTime().Subtract(DateTime.Now).TotalMinutes < 30)
        {
            message += "\n\n<b>LƯU Ý:</b> Đơn hàng đã gần đến giờ nhận. Việc hủy có thể sẽ bị tính phí.";
        }

        if (await DialogService.Show("Xác nhận Hủy đơn", message))
        {
            var result = await OrderService.CancelOrderAsync(order.OrderId);
            if (result.Success)
            {
                ToastService.ShowToast(result.Message, ToastLevel.Success);
                await LoadOrders();
            }
            else
            {
                ToastService.ShowToast(result.Message, ToastLevel.Danger);
            }
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending Payment" => "bg-warning text-dark",
            "Paid" => "bg-info text-dark",
            "Preparing" => "bg-primary",
            "Ready for Pickup" => "bg-success",
            "Completed" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-dark"
        };
    }
    private void EditOrder(Order order)
    {
        CartService.LoadOrderForEditing(order);
        NavigationManager.NavigateTo("/cart");
    }
}